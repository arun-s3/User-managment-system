<%- include('../partials/head', { useBootstrap: true, useGoogleFonts: false }) %>

    <%- include('../partials/logo', { type: 'main' }) %>

    <% if (typeof toast !== "undefined" && toast) { %>
        <script>
          window.__TOAST__ = {
            message: "<%= toast.message %>",
            type: "<%= toast.type %>"
          }
        </script>
    <% } %>

    <div id="toast" class="toast"></div>

    <section class="bg-custom">
        <div class="container py-5 h-100">
           
            <div class="row d-flex justify-content-center align-items-center h-100">
                
                <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                    <div class="card bg-dark text-white mt-5" 
                            style="border-radius: 1rem; background-color:#24242C; box-shadow: 3px 3px 2px #24242C;">
                        <div class="card-body p-5 text-center">
                        
                            <div class="mb-md-5 mt-md-4 pb-5">
                        
                                <h2 class="fw-bold mb-2 text-uppercase">Welcome !</h2>

                                <% if (user.name) { %>
                                    <p class="text-white-50 mb-4"><%= user.name %></p>
                                <% } else { %>
                                    <p class="text-white-50 mb-4"><%= "User" %></p>   
                                <% } %>

                                <% if(typeof message !== 'undefined') {%>
                                <p style="color:red;"> <%= message%></p>
                                <%}else if(typeof message !== 'undefined'){ %>
                                    <p style="color:green;"> <%= message%></p>
                                <% } %>
                                    
                                <% if (locals.err) { %>
                                    <div class="alert alert-danger"><%= locals.err %></div>
                                <% } %>

                                <img src="<%= user.image %>" alt="profile" height="100px" width="100px" id="profilePreview"
                                    style="border-radius: 46px; outline: 2px solid #F3387F; margin-bottom: 1.2rem;">
                                <p id="img-error" style="display: none;"></p>

                                <form action="/edit" method="post" id="form" enctype="multipart/form-data">

                                    <input type="hidden" name="id" value="<%= user._id %>">

                                    <table class="table table-dark table-hover w-100">

                                        <tr class="w-100">
                                            <td>Name</td>
                                            <td>
                                                <div class="form-outline form-white mb-3">
                                                    <input type="text" id="name" class="form-control form-control-lg" name="name" 
                                                        value="<%= user.name %>" required />
                                                </div>
                                                <div id="error1" style="display: none;" class="alert alert-danger err"></div>
                                            </td>
                                            <td style="visibility:hidden; width:10%;"></td>
                                        </tr>

                                        <tr class="w-100">
                                            <td>E-mail</td>
                                            <td>
                                                <div class="form-outline form-white mb-3">
                                                    <input type="email" id="email" class="form-control form-control-lg" name="email" 
                                                        value="<%= user.email %>" required />
                                                </div>
                                                <div id="error2" style="display: none;" class="alert alert-danger err"></div>
                                            </td>
                                            <td style="visibility:hidden; width:10%;"></td>
                                        </tr>

                                        <tr class="w-100">
                                            <td>Mobile</td>
                                            <td>
                                                <div class="form-outline form-white mb-3">
                                                    <input type="tel" id="mobile" class="form-control form-control-lg" name="mno" 
                                                        value="<%= user.mobile %>" required />
                                                </div>
                                                <div id="error3" style="display: none;" class="alert alert-danger err"></div>
                                            </td>
                                            <td style="visibility:hidden; width:10%;"></td>
                                        </tr>

                                        <tr class="w-100">
                                            <td>Password</td>
                                            <td>
                                                <div class="form-outline form-white mb-3 password-wrapper">
                                                    <input type="password" id="password" class="form-control form-control-lg" name="password" required/>
                                                
                                                    <span class="toggle-password password-black" id="togglePassword" style="top: 0px;">
                                                        <svg id="eyeOpen" xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="none" viewBox="0 0 24 24">
                                                            <path stroke="currentColor" stroke-width="2"
                                                                d="M2 12s3.6-7 10-7 10 7 10 7-3.6 7-10 7-10-7-10-7z"/>
                                                            <circle cx="12" cy="12" r="3" stroke="currentColor" stroke-width="2"/>
                                                        </svg>
                                                    
                                                        <svg id="eyeClosed" xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="none" viewBox="0 0 24 24" style="display:none;">
                                                            <path stroke="currentColor" stroke-width="2"
                                                                d="M3 3l18 18M10.6 10.6A3 3 0 0012 15a3 3 0 002.4-4.4M9.9 4.2A10.9 10.9 0 0112 5c6.4 0 10 7 10 7a18.6 18.6 0 01-3.2 4.4M6.2 6.2C3.9 8 2 12 2 12s3.6 7 10 7a9.6 9.6 0 004.2-.9"/>
                                                        </svg>
                                                    </span>
                                                </div>
                                                <div id="error4" style="display: none;" class="alert alert-danger err"></div></p>
                                            </td>
                                            <td style="visibility:hidden; width:10%;"></td>
                                        </tr>

                                        <tr class="w-100">
                                            <td>Profile Pic</td>
                                            <td>
                                                <div class="file">
                                                    <input type="file" name="image" id="file" accept="image/*" class="w-100" style="font-size:12px;">
                                                    <label class="form-label file-label" for="file" 
                                                            style="display: flex; justify-content: flex-start;">
                                                        Upload Profile Picture (optional, recommended)
                                                    </label>
                                                </div>
                                            </td>
                                            <td style="visibility:hidden; width:10%;"></td>
                                        </tr>

                                    </table>
                                
                                    <h2>
                                        <button type="submit" id="submitBtn" class="btn-site btn-primary-glow w-100" style="font-size: 17px;">
                                            Update Profile
                                        </button>
                                    </h2>        
                                </form>

                                <a href="/logout" class="btn-site btn-danger-glow w-100">
                                    Logout
                                </a>

                                 <a href="/home" class="btn-site btn-subtle w-100 text-center mt-3" style="margin-top: 2rem !important;">
                                     ‚Üê Go Back
                                 </a>

                            </div>

                        </div>
                    </div>
                </div>

            </div>
        </div>
      </section>

<%- include("../partials/footer", {
    scripts: `
        <script src="/public/js/togglePassword.js"></script>
        <script src="/public/js/validation.js"></script>
        <script src="/public/js/imgPreviewAndValidate.js"></script>
        <script src="/public/js/submitLoading.js"></script>
        <script src="/public/js/toast.js"></script>
    `
}) %>
