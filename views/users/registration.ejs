
<%- include('../partials/head', { useBootstrap: true, useGoogleFonts: false }) %>


    <%- include('../partials/logo', { type: 'main' }) %>

    <% if (typeof toast !== "undefined" && toast) { %>
        <script>
          window.__TOAST__ = {
            message: "<%= toast.message %>",
            type: "<%= toast.type %>"
          }
        </script>
    <% } %>

    <div id="toast" class="toast"></div>

        <section class="bg-custom">
            <div class="container py-5 h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                        <div class="card text-white" 
                            style="margin-top: 3rem; border-radius: 1rem; background-color:#24242C; box-shadow: 3px 3px 2px #24242C;">
                            <div class="card-body p-5 ">
                            
                                <div class="mb-md-5 mt-md-4 pb-5">
                                
                                    <h2 class="fw-bold mb-2 text-uppercase">Register</h2>
                                    <p class="text-white-50 mb-4">Please enter your details</p>
                                
                                    <form id="form" action="/register?<%= isAdmin ? 'admin=true' : 'admin=false' %>"
                                        method="post" method="post" enctype="multipart/form-data">
                                    
                                        <% if((typeof message !== 'undefined') && (message.includes("exists")))
                                        {%>
                                        <p style="color:red;"> <%= message%></p>
                                        <%}else if(typeof message !== 'undefined'){ %>
                                            <p style="color:green;"> <%= message%></p>
                                        <% } %>
                                        
                                        <div class="form-outline form-white mb-3">
                                            <% if(typeof name !=='undefined'){%>
                                            <input type="text" id="name" class="form-control form-control-lg" name="name" 
                                                value="<%=name%>" required />
                                            <%}else{%>
                                                <input type="text" id="name" class="form-control form-control-lg" name="name" required />
                                            <%}%>
                                            
                                            <label class="form-label" for="name">Name</label>
                                        </div>
                                        <p><div id="error1" style="display: none;" class="alert alert-danger err"></div></p>
                                    
                                        <div class="form-outline form-white mb-3">
                                            <input type="email" id="email" class="form-control form-control-lg" name="email" required />
                                            <label class="form-label" for="email">Email</label>
                                        </div>
                                        <p><div id="error2" style="display: none;" class="alert alert-danger err"></div></p>
                                    
                                        <div class="form-outline form-white mb-3">
                                            <% if(typeof mobile !=='undefined'){%>
                                            <input type="text" id="mobile" class="form-control form-control-lg" name="mno"
                                                 value="<%=mobile%>" required />
                                            <%}else{%>
                                            <input type="text" id="mobile" class="form-control form-control-lg" name="mno" required />
                                            <%}%>
                                            <label class="form-label" for="mobile">Mobile</label>
                                        </div>
                                        <p><div id="error3" style="display: none;" class="alert alert-danger err"></div></p>
                                    
                                        <div class="form-outline form-white mb-3 password-wrapper">
                                            <input type="password" id="password" class="form-control form-control-lg" name="password" required/>
                                            <label class="form-label" for="password">Password</label>
                                        
                                            <span class="toggle-password" id="togglePassword" style="top: -14px;">
                                                <svg id="eyeOpen" xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="none" viewBox="0 0 24 24">
                                                    <path stroke="currentColor" stroke-width="2"
                                                        d="M2 12s3.6-7 10-7 10 7 10 7-3.6 7-10 7-10-7-10-7z"/>
                                                    <circle cx="12" cy="12" r="3" stroke="currentColor" stroke-width="2"/>
                                                </svg>
                                            
                                                <svg id="eyeClosed" xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="none" viewBox="0 0 24 24" style="display:none;">
                                                    <path stroke="currentColor" stroke-width="2"
                                                        d="M3 3l18 18M10.6 10.6A3 3 0 0012 15a3 3 0 002.4-4.4M9.9 4.2A10.9 10.9 0 0112 5c6.4 0 10 7 10 7a18.6 18.6 0 01-3.2 4.4M6.2 6.2C3.9 8 2 12 2 12s3.6 7 10 7a9.6 9.6 0 004.2-.9"/>
                                                </svg>
                                            </span>
                                        </div>
                                        <p><div id="error4" style="display: none;" class="alert alert-danger err"></div></p>

                                        <% if (isAdmin) { %>
                                            <div class="form-outline form-white mb-3">
                                                <input type="text" name="inviteCode" class="form-control form-control-lg invite-code" 
                                                        placeholder="Admin Invite Code" required/>
                                                <label class="form-label">Admin Invite Code</label>
                                            </div>
                                        <% } %>
                                        
                                        <div class="file">
                                            <input type="file" name="image" id="file">
                                            <label class="form-label file-label" for="file">Upload Profile Pic</label>
                                        </div>
                                        <img src="" height="50px" width="50px" id="profilePreview"
                                            style="display:none; border-radius: 25px; outline: 2px solid #F3387F; margin-bottom: 1.2rem;"/>
                                        <p id="img-error" style="display: none;"></p>

                                        <div class="register-actions">
                                            <button type="submit" class="btn-site btn-primary-glow w-100" id="submitBtn">
                                                Create Account
                                            </button>
                                        
                                            <p class="register-link">
                                                Already have an account?
                                                <a href="/" class="register-login-link">Login</a>
                                            </p>
                                        </div>

                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

<%- include("../partials/footer", {
    scripts: `
        <script src="/public/js/togglePassword.js"></script>
        <script src="/public/js/validation.js"></script>
        <script src="/public/js/imgPreviewAndValidate.js"></script>
        <script src="/public/js/submitLoading.js"></script>
        <script src="/public/js/toast.js"></script>
    `
}) %>




















