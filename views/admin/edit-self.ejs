<%- include('../partials/head', { useBootstrap: true, useGoogleFonts: false }) %>

    <%- include('../partials/logo', { type: 'main' }) %>    

    <% if (typeof toast !== "undefined" && toast) { %>
        <script>
          window.__TOAST__ = {
            message: "<%= toast.message %>",
            type: "<%= toast.type %>"
          }
        </script>
    <% } %>

    <div id="toast" class="toast"></div>

    <section class="bg-custom">
        <div class="container py-5 h-100">
           
            <div class="row d-flex justify-content-center align-items-center h-100">
                
                <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                    <div class="card bg-dark text-white inner-container" 
                        style="border-radius: 1rem; background-color:#24242C; box-shadow: 3px 3px 2px #24242C;">
                        <div class="card-body p-5 text-center">
        
                            <div class="mb-md-5 mt-md-4 pb-5">
        
                                <h2 class="fw-bold mb-2 text-uppercase">Welcome !</h2>

                                <% if (admin.name) { %>
                                    <p class="text-white-50 mb-4"><%= admin.name %></p>
                                <% } else { %>
                                    <p class="text-white-50 mb-4"><%= "admin" %></p>   
                                <% } %>

                                <% if (locals.err) { %>
                                    <div class="alert alert-danger"><%= locals.err %></div>
                                <% } %> 
                                
                                <img src="<%= admin.image %>" alt="profile" height="100px" width="100px" 
                                    id="profilePreview" style="border-radius: 46px; outline: 2px solid #F3387F; margin-bottom: 1.2rem;">
                                <p id="img-error" style="display: none;"></p>

                                <form action="" method="post" id="form" enctype="multipart/form-data">

                                    <input type="hidden" name="id" value="<%= admin._id %>">

                                    <table class="table table-dark table-hover w-100">
                                        <tr class="w-100">
                                            <td>Name</td>
                                            <td>
                                                <div class="form-outline form-white mb-3">
                                                    <input type="text" id="name" class="form-control form-control-lg" 
                                                        name="name" value="<%= admin.name %>" required />
                                                </div>
                                                <div id="error1" style="display: none;" class="alert alert-danger err"></div>
                                            </td>
                                            <td style="visibility:hidden; width:10%;"></td>
                                        </tr>

                                        <tr class="w-100">
                                            <td>E-mail</td>
                                            <td>
                                                <div class="form-outline form-white mb-3">
                                                    <input type="email" id="email" class="form-control form-control-lg" 
                                                        name="email" value="<%= admin.email %>" required />
                                                </div>
                                                <div id="error2" style="display: none;" class="alert alert-danger err"></div>
                                            </td>
                                            <td style="visibility:hidden; width:10%;"></td>
                                        </tr>

                                        <tr class="w-100">
                                            <td>Mobile</td>
                                            <td>
                                                <div class="form-outline form-white mb-3">
                                                    <input type="tel" id="mobile" class="form-control form-control-lg" 
                                                        name="mno" value="<%= admin.mobile %>" required/>
                                                </div>
                                                <div id="error3" style="display: none;" class="alert alert-danger err"></div>
                                            </td>
                                            <td style="visibility:hidden; width:10%;"></td>
                                        </tr>

                                        <tr class="w-100">
                                            <td>Password</td>
                                            <td>
                                                <div class="form-outline form-white mb-3">
                                                    <input type="password" id="password" class="form-control form-control-lg" 
                                                        name="password" required/>
                                                </div>
                                                <div id="error4" style="display: none;" class="alert alert-danger err"></div>
                                            </td>
                                            <td style="visibility:hidden; width:10%;"></td>
                                        </tr>

                                        <tr class="w-100">
                                            <td>Profile Pic</td>
                                            <td>
                                                <div class="file">
                                                    <input type="file" name="image" id="file" accept="image/*" style="font-size:12px;">
                                                    <label class="form-label file-label" for="file" 
                                                        style="display: flex; justify-content: flex-start;">
                                                            Upload Profile Picture (optional, recommended)
                                                    </label>
                                                </div>
                                            </td>
                                            <td style="visibility:hidden; width:10%;"></td>
                                        </tr>
                                    </table>

                                    <div class="admin-actions">
                                        <button class="btn-site btn-primary-glow w-100" type="submit" id="submitBtn">
                                            Update Profile
                                        </button>
                                    
                                        <a href="/logout" class="btn-site btn-danger-glow w-100 mt-3">
                                            Logout
                                        </a>
                                    
                                        <a href="/admin/home" class="btn-link-back">
                                            ‚Üê Home
                                        </a>
                                    </div>

                                </form>

                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </section>
      
<%- include("../partials/footer", {
    scripts: `
        <script src="/public/js/validation.js"></script>
        <script src="/public/js/imgPreviewAndValidate.js"></script>
        <script src="/public/js/submitLoading.js"></script>
        <script src="/public/js/toast.js"></script>
    `
}) %>
