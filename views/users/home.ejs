

<%- include('../partials/head', { useBootstrap: true, useGoogleFonts: false }) %>

    <% if (typeof toast !== "undefined" && toast) {  %>
        <script>
        window.__TOAST__ = {
            message: "<%= toast.message %>",
            type: "<%= toast.type %>"
        }
        </script>
    <% } %>

    <%- include('../partials/logo', { type: 'main' }) %>


    <div id="toast" class="toast"></div>

        <section class="min-vh-100 bg-custom">
            <div class="container py-5">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                        <div class="card text-white mt-5" style="border-radius: 1rem; 
                                                            background-color:#24242C;
                                                            box-shadow: 3px 3px 2px #24242C;">
                            <div class="card-body p-5 text-center">
                            
                                <div class="mb-md-5 mt-md-4 pb-5">
                                
                                    <h2 class="fw-bold mb-2 text-uppercase">Welcome !</h2>
                                
                                        <% if (user.name) {%>
                                    <p class="text-white-50 mb-4"><%= user.name %></p>
                                            <% } else { %>
                                            <p class="text-white-50 mb-4"> <%= "User" %> </p>   
                                            <% } %>
                                            
                                            <img src="<%=user.image%>" alt="<%=user.image%>" height="100px" width="100px" id="home-img" 
                                                style="border-radius: 46px; outline: 2px solid #F3387F; margin-bottom: 1.2rem;">
                                            <table class="table table-dark  table-hover w-100">
                                                <tr class="w-100">
                                                
                                                <td>Name :</td>
                                                <% if(user) { %>
                                                <td><%= user.name %></td>
                                                
                                                </tr>
                                            
                                                <tr class="w-100">
                                                
                                                    <td>E-mail :</td>
                                                    <td><%= user.email %></td>
                                                
                                                </tr>
                                                <tr class="w-100">
                                                
                                                    <td>Mobile :</td>
                                                    <td><%= user.mobile %></td>
                                                
                                                </tr>
                                            
                                            <% } %>
                                            </table>
                                        
                                            <h2>
                                                <a href="/edit?id=<%=user._id%>">
                                                    <button type="button" class="btn btn-outline-light btn-lg px-5" 
                                                            style="border-color: #BA376F;">
                                                        Edit
                                                    </button>
                                                </a>
                                            </h2>        
                                        
                                            <h2 style="margin-top: 2rem;">
                                                <a href="/logout">
                                                    <button type="button" class="btn btn-outline-light btn-lg px-5">Logout</button>
                                                </a>
                                            </h2>
                                            
                                </div>
                        
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

<%- include("../partials/footer", {
    scripts: `
        <script src="/public/js/toast.js"></script>
    `
}) %>
